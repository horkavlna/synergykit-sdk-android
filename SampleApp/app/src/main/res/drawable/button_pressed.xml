<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@color/selector_color" />

            <corners android:radius="1dp" />
        </shape>
    </item>
    <item android:bottom="2dp">
        <shape>
            <solid android:color="@color/buttonStrokePressed" />

            <corners android:radius="1dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/buttonBackgroundEndColorPressed"
                android:startColor="@color/buttonBackgroundStartColorPressed" />

            <corners android:radius="1dp" />
        </shape>
    </item>

</layer-list>